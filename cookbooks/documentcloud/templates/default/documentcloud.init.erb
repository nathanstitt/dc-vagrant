#! /bin/sh


PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
NAME=documentcloud

case "$1" in
  start)
        echo -n "Starting $NAME: "
        cd <%= node[:documentcloud][:directory] %>
        bundle exec rake crowd:server:start
        bundle exec rake crowd:node:start
        bundle exec rake sunspot:solr:start
        ;;
  stop)
        echo -n "Stopping $NAME: "
        cd <%= node[:documentcloud][:directory] %>
        bundle exec rake crowd:server:stop
        bundle exec rake crowd:node:stop
        bundle exec rake sunspot:solr:stop
        ;;
  restart|force-reload)
        bundle exec rake crowd:server:restart
        bundle exec rake crowd:node:restart
        ;;
  *)
        N=/etc/init.d/$NAME
        echo "Usage: $N {start|stop|restart}" >&2
        exit 1
        ;;

esac
